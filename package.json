{
  "name": "better-music-control",
  "main": "script.js",
  "description": "Allows TornadoBot user to control music with media-hotkeys.",
  "version": "1.0.1",
  "author": {
    "name": "JBKDevelopments"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^22.2.0",
    "electron-builder": "^23.3.3",
    "electron-packager": "^16.0.0"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "dotenv": "^16.0.2",
    "electron-acrylic-window": "^0.5.11"
  },
  "build": {
    "appId": "com.bettermusiccontrol.app",
    "productName": "TornadoBot Music Control",
    "target": "NSIS",
    "directories": {
      "output": "build"
    },
    "icon": "./assets/icon.ico",
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    }
  }
}
